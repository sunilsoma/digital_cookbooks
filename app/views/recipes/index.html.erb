<!-- app/views/search/index.html.erb -->
<h1>Search for Recipes</h1>
<%= form_tag(recipes_path, method: :get) do %>
  <div>
    <%= label_tag 'recipes', 'Recipes:' %>
    <%= text_field_tag 'recipes' %>
  </div>
  <div>
    <%= label_tag 'Ingredient', 'Ingredient:' %>
    <%= text_field_tag 'ingredient' %>
  </div>
  <%= submit_tag 'Search' %>
<% end %>


<!-- app/views/search/index.html.erb -->
<h1>Search Results</h1>
<% if @recipes.present? %>
  <ul>
    <% @recipes.each do |recipe| %>
      <li>
        <h2><%= recipe.name %></h2>
        <p><%= recipe.instructions %></p>
        <p>Cooking Time: <%= recipe.cooking_time %> min</p>
        <p>Ingredients: <%= recipe.ingredients.pluck(:name).join(', ') %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p><%= flash.now[:notice] %></p>
<% end %>
